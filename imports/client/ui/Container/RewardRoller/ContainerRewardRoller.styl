@import '{}/imports/client/ui/colors.styl'

.cw--ContainerRewardRoller
  display flex
  width 100%
  max-width 1200px
  height 371px
  padding 50px 0 65px
  box-sizing border-box
  flex-direction row
  align-items center
  justify-content center
  flex-shrink 0
  background-image url(/img/game/bg/entrancereward.jpg)
  
  &_hasWinner
    .cw--ContainerRewardRoller__reward
      &:not(.cw--ContainerRewardRoller__reward_winner)
        opacity 0.5
        -webkit-filter grayscale(0.4) brightness(0.6)
        filter grayscale(0.4) brightness(0.6)

  > .cw--ContainerRewardRoller__reward
    margin auto 10px

  &__reward
    position relative
    width 128px
    max-height 160px
    text-align center
    -webkit-filter grayscale(0) brightness(1)
    filter grayscale(0) brightness(1)
    transition width 0.5s, height 0.5s, opacity 0.5s, filter 0.5s

    &_winner
      width 192px
      height 256px

      .cw--ContainerRewardRoller__rewardChance
        opacity 0
    
    > .cw--ContainerRewardRoller__rewardCount
      position absolute
      bottom 0
      left 0
      
    > .cw--ContainerRewardRoller__rewardChance
      position absolute
      bottom -30px
      left 0

  &__rewardCard
    max-width 100%
    max-height 100%

  &__rewardCount
    display block
    width 100%
    padding 8px 0
    background-color alpha($cw--color_black, 0.5)
    text-align center

  &__rewardChance
    display block
    width 100%
    padding 5px 0
    background linear-gradient(to right, alpha($cw--color_black, 0) 0%, alpha($cw--color_black, 0.8) 50%, alpha($cw--color_black, 0) 100%)
    text-align center
    color $cw--color_metal
    transition opacity 0.5s
    opacity 1
