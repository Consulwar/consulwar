@import '{}/imports/client/ui/colors.styl'

.cw--input
  height 27px
  padding-left 5px
  background-color $cw--color_tableEven
  border 1px solid $cw--color_science
  border-image linear-gradient(to top, #2B4A78 0%, $cw--color_science 100%) 1
  color $cw--color_description
  font-family 'Roboto', Arial, sans-serif;
  font-size 18px

  &__disabled
    cursor not-allowed !important
    -webkit-filter grayscale(1) !important
    filter grayscale(1) !important
  
  &::placeholder
    color $cw--color_lightGrey
    transition color .15s ease

  &:hover
    border-color #2D5591
    border-image linear-gradient(to top, #2D5591, $cw--color_science) 1
    &::placeholder
      color $cw--color_nearWhite
  
  &:focus
    outline none
    background linear-gradient(0deg, #303945, #101317)