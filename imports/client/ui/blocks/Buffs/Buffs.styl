@import '{}/imports/client/ui/colors'
@import '{}/imports/client/ui/config'
@import '{}/imports/client/ui/responsive'

.cw--Buffs
  position absolute
  top 200px
  left 0px

  .cw--QuestWobbler + &
    top 300px

  +media(null, $cw--size_l)
    display none

  &__item
    display flex
    padding 6px 0 6px 16px
    cursor default

  &__icon
    position relative
    display block
    width 56px
    height @width
    flex-shrink 0

    background-image url(/img/game/buff.svg)
    background-position center
    background-repeat no-repeat
    background-size 100%

    // icon types by 'affect'
    &_crystals
      background-image url(/img/game/Resource/Base/Crystal/icon.svg)

    &_metals
      background-image url(/img/game/Resource/Base/Metal/icon.svg)

    &_honor
      background-image url(/img/game/Resource/Base/Honor/icon.svg)

    &_damage
      background-image url(/img/game/Unit/damage.svg)
    
    &_life
      background-image url(/img/game/Unit/armor.svg)

    &_humans
      background-image url(/img/game/Resource/Base/Human/icon.svg)

    &_time
      background-image url(/img/game/status_queueBusy.svg)

    // icon types by 'engName'
    &_Crazy
      background-image url(/img/game/buff_vip.svg)

    // mark on icon with single effect
    &_hasMark:before
      content ''
      position absolute
      left -8px
      top 50%
      transform translateY(-50%)

      display block
      width 30px
      height @width

      background-image url(/img/game/buff_up.svg)
      background-repeat no-repeat
      background-size cover
      background-position center

  &__tooltipHeader
    cw--fontFamily_cond()
    font-weight bold
    font-size $cw--fontSize_s
    color $cw--color_human

    &_metal
      color $cw--color_metal

    &_crystals
      color $cw--color_crystal

    &_honor
    &_damage
      color $cw--color_honor

    &_life
      color $cw--color_white

  &__timer
    display block
    font-weight normal
    color $cw--color_white

  &__effects
    cw--fontFamily_cond()
    margin-top 6px
