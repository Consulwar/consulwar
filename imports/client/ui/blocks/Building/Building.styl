@import '{}/imports/client/ui/config'
@import '{}/imports/client/ui/colors'

.cw--Building
  cw--fontFamily_cond()
  font-size 14px
  width 720px
  // min-height 500px
  display flex
  flex-direction column
  margin auto
  // background-color alpha($cw--color_black, .7)
  
  &__header
    font-size $cw--fontSize_l
    background-color $cw--color_black
    padding-left 14px
    flex-grow 0
    flex-basis 33px
    font-weight bold
    display flex

  &__headerLevel
  &__headerControls
  &__headerTitle
    margin auto    

  &__headerLevel
  &__headerControls
    flex-grow 0
    flex-basis 20%

  &__headerLevel
    color $cw--color_description

  &__headerTitle
    flex-basis 60%
    text-align center
    flex-grow 1

  &__headerControls
    display flex
    justify-content flex-end

  &__headerIcon
    margin auto 6px

  &__levelCount
    color $cw--color_metal

  &__info
    display block
    height 100px
    overflow hidden
    background-color alpha($cw--color_black, .1)
  &__infoWrap
    height 100px
    display flex
    padding-left 14px
  &__info_hidden
    display none

  &__mainPic
    flex-basis 75px
    flex-grow 0
    margin auto
    padding-right 8px
  &__mainPicImage
    width 75px
    height auto
    display block
  &__description
    color $cw--color_description
    padding-right 20px
    height 85px
    margin auto
    overflow hidden

  &__mainField
    flex-grow 1
    flex-basis 370px
    display flex
    flex-direction row
  &__panel
    padding 14px
    flex-basis 460px
    flex-grow 0
    display flex
    flex-direction column

  &__effects
    padding-bottom 14px
    
  &__price
    flex-basis 120px
    padding 14px 0
    border-top solid 1px $cw--color_grey

  &__actions
    padding-top 14px
    border-top solid 1px $cw--color_grey
    margin auto 0 0
    flex-shrink 0
    display flex
  &__action
    flex-basis 170px
    width 170px
    display flex
    flex-direction column
    justify-content flex-end
    margin auto 15px 0 0

  &__require
    flex-basis 260px
    flex-grow 0