@import '{}/imports/client/ui/colors'
@import '{}/imports/client/ui/config'
@import '{}/imports/client/ui/responsive'

.cw--ColosseumTournament
  display flex
  width 100%
  height 480px
  box-sizing border-box
  padding 15px

  flex-direction row
  flex-wrap wrap
  justify-content space-between
  align-items flex-end
  
  +media(null, $cw--size_s)
    height auto
    padding-bottom 50px


  &__tournament
    flex-basis 33% // 240
    height 175px
    margin 10px auto

    text-align center
    font-weight bold
    -webkit-filter grayscale(1)
    filter grayscale(1)
    cursor pointer
    +media(null, $cw--size_xs)
      flex-basis 50%

    &_active
      -webkit-filter none
      filter none

    &_disabled
      cursor not-allowed
      -webkit-filter grayscale(1) brightness(0.2)
      filter grayscale(1) brightness(0.2)

  &__tournamentImg
    display block
    margin auto
    max-width 100%
    max-height 100%

  &__actions
    flex-basis 100%
    display flex
    flex-direction row
    justify-content space-between
    align-items flex-end
    +media($cw--size_xs, $cw--size_s)
      margin auto
      flex-basis 100%
      flex-direction column
      flex-wrap wrap
      height 100px
      align-items flex-end
    +media(null, $cw--size_xs)
      flex-direction column
      align-items center

  &__status
    display flex
    flex-basis 280px
    flex-direction row
    align-items center
    
    +media(null, $cw--size_s)
      flex-basis auto
      order -1
      margin-right auto
      height 100%
    +media(null, $cw--size_xs)
      margin 10px 0

  &__next
    display flex
    padding 0 5px
    flex-direction row
    flex-wrap wrap
    align-items center
    justify-content center

  &__timer
    margin-left 4px
    font-size 18px
    color $cw--color_metal

  &__info
    display flex
    justify-content space-around
    flex-direction column
    font-size 12px

  &__name
    color $cw--color_white

  &__description
    color $cw--color_metal
  
  &__start
  &__back
    width 170px
    +media(null, $cw--size_xs)
      margin 10px 0