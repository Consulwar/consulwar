@import '{}/imports/client/ui/colors'
@import '{}/imports/client/ui/config'

.cw--EarthConsuls
  position relative
  display flex
  flex-direction column
  width 360px
  box-sizing border-box
  padding 10px 16px 16px
  background-color $cw--color_darkGrey

  &__header
    flex-grow 0
    flex-shrink 0
    margin-bottom 10px
    color $cw--color_lightGrey
  
  &__generalName
    font-weight bold
    color $cw--color_human

  &__consuls
    position relative
    flex-grow 1
    height 350px
    margin 10px -16px 20px
    cursor pointer
    overflow hidden

  &__consulsTable
    display flex
    flex-direction column
    width 100%

  &__consul
    display flex
    padding 0 6px

    &_even
      background-color $cw--color_tableEven

    &_odd
      background-color $cw--color_tableOdd

    &_active
      border solid 1px $cw--color_metal
      border-image $cw--gradient_metal 1
      border-right none

  &__consulName
  &__consulTag
  &__consulRespond
  &__consulPower
    box-sizing border-box
    padding 10px
    flex-grow 0
    flex-shrink 0

  &__consulName
    flex-grow 1

  &__consul_active &__consulName
    color $cw--color_metal

  &__consul_self &__consulName
    color $cw--color_credit

  &__consulTag
    width 50px

  &__consulRespond
    width 75px
    text-align center

  &__consulPower
    width 60px
    text-align right
    color $cw--color_metal


  &__actions
    flex-grow 0
    flex-shrink 0
    justify-content center

  &__actionCommand
    width 140px
    margin-left auto
