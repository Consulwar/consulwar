@import '{}/imports/client/ui/colors.styl'

.cw--License
  width 900px
  max-width 100%
  height 530px
  max-height 100vh
  background-color alpha($cw--color_black, .9)
  padding 20px
  box-sizing border-box
  display flex
  flex-direction column
  
  &__content
    display flex
    flex-grow 1
  
  &__frame
    width 100%
    background-color $cw--color_nearWhite
    box-sizing border-box
    border none

  &__close
    background $cw--color_science
    padding 10px
    width 100px
    margin 10px auto auto
    text-align center
    text-decoration none