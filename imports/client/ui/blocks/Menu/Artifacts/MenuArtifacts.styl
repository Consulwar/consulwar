@import '{}/imports/client/ui/config'
@import '{}/imports/client/ui/colors'
@import '{}/imports/client/ui/responsive'

.cw--MenuArtifacts
  flex-wrap wrap
  +media(null, $cw--size_xs)
    flex-direction column
    align-items center

  &__itemCount
    position absolute
    display flex
    align-items center
    justify-content center
    box-sizing border-box
    top 6px
    left 0
    padding 5px
    cw--fontFamily_cond()
    font-size $cw--fontSize_l
    text-align right
    color $cw--color_white
    background linear-gradient(to right, $cw--color_black 0%, alpha($cw--color_black, 0) 60%)

    &_progress
      top 6px
      left 0
      width auto
      border-radius 0
  
  &__group
    flex-wrap nowrap

  &__item
    width 65px

  &__itemIcon
    filter grayscale(0)