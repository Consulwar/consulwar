@import '{}/imports/client/ui/colors'
@import '{}/imports/client/ui/config'
@import '{}/imports/client/ui/responsive'

.cw--PaymentHistory
  display flex
  flex-direction column
  width 960px
  height 570px
  max-width 100%
  max-height 100%
  background-color $cw--color_black
  +media(null, $cw--size_xs)
    height 100vh

  &__tabs
    padding-right 45px

  &__data
    position relative
    flex-basis auto
    flex-grow 1
    background-color $cw--color_tableOdd

  &__empty
    position absolute
    top 0
    left 0
    display flex
    width 100%
    height 100%
    padding 20px
    justify-content center
    align-items center
    box-sizing border-box

    font-size $cw--fontSize_l
    color $cw--color_lightGrey

  &__head
    flex-grow 0
    flex-shrink 0
    color $cw--color_lightGrey

  &__tableTime
  &__tableProfit
  &__tableDescription
    flex-grow 0
    padding 10px 16px
    text-align left
    font-weight normal
    box-sizing border-box

  &__th
    padding 12px 16px

  &__tableTime
    width 170px
    +media(null, $cw--size_s)
      width 120px

  &__tableProfit
    flex-grow 1

  &__tableDescription
    width 50%
    +media(null, $cw--size_xs)
      order -1
      width 100%


  &__row
    display flex
    flex-direction row
    align-items flex-start
    font-size $cw--fontSize_m
    color $cw--color_nearWhite
    +media(null, $cw--size_xs)
      flex-wrap wrap

    &:hover
      filter brightness(1.2)

    &_odd
      background-color $cw--color_tableOdd

    &_even
      background-color $cw--color_tableEven

  &__footer
    display flex
    flex-shrink 0
    padding 10px
    height 40px
    justify-content space-between

  &__paging
    margin auto