@import '{}/imports/client/ui/colors'

.cw--PaymentProcessing
  position relative
  width 960px
  height 540px
  padding 10px
  box-sizing border-box
  background-color $cw--color_black
  font-size 14px
  color $cw--color_credit
  overflow auto
  
  iframe
    width 100%
    height 100%
    background-color #FFFFFF

  &_platbox
    width 1030px
    height 730px
    max-width 100%
    max-height 730px
    padding 10px
    overflow hidden

  &_teko
    width 476px
    height 652px
    max-width 100%
    max-height 652px
    padding 10px
    overflow hidden