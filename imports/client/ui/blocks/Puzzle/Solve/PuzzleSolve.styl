@import '{}/imports/client/ui/colors.styl'

.cw--PuzzleSolve
  width 500px
  padding 50px
  
  background-color $cw--color_black
  
  &__text
    font-size 18px
    color #cdcdcd

  &__cellsContainer
    position relative

  &__timeoutText_container
    position absolute
    top 0
    left 0
    display flex
    align-content center
    justify-content center
    width 100%
    height 100%
    background-color rgba(0, 0, 0, 0.5)

  &__timeoutText
    margin auto
    font-size 18px


  &__cells
    margin 22px auto

  &__options
    display flex
    align-content space-between
    justify-content space-between

  &__option
    flex-grow 0
    flex-shrink 0
    cursor pointer
    .cw--ResourceSingle__image
      height 75px
      margin 0