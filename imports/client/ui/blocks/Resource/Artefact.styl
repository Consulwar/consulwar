artefacts-icon($group, $name, $color)
  &_icon_{$name}
    background-image url(/img/game/artefact/$group/i/$name.png)
    color $color
 
  &_{$name}
    background-image url(/img/game/artefact/$group/$name/item.jpg)
    color $color

$iconRatio = 65%
.cw--Artefact
  &_icon
    background-repeat no-repeat
    background-size $iconRatio
    background-position center top
    text-align center
    &::before
      content ''
      display block
      width $iconRatio
      margin 0 auto
      padding-top @width
      padding-bottom 3px

