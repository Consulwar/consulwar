@import '{}/imports/client/ui/colors'
@import '{}/imports/client/ui/config'
@import '{}/imports/client/ui/responsive'

.cw--Sponsor
  display block
  width 1000px
  max-width 100%

  font-size $cw--fontSize_m
  background-color $cw--color_black

  &__header
    min-height 42px
    padding 10px 45px
    box-sizing border-box

    cw--fontFamily_cond()
    font-size $cw--fontSize_l
    text-align center
    color $cw--color_human
    background-color $cw--color_black

  &__brief
    padding 7px 20px 20px
    font-size $cw--fontSize_m
    color $cw--color_description
    background-color $cw--color_darkGrey

  &__workList
    margin 0
    color $cw--color_metal
    list-style none

  &__workItem
    &:before
      content 'â€”'
      margin-right 3px

  &__description
    margin 20px 0
    color $cw--color_description

  &__alert
    margin 20px 0 0
    color $cw--color_credit

  &__summary
    display flex
    padding 16px 20px
    align-items flex-end

    +media(null, $cw--size_s)
      flex-direction column
      align-items center

  &__summaryMain
    flex-grow 1

  &__aboutCredits
    margin-bottom 16px

  &__scale
    position relative
    flex-grow 0
    flex-shrink 0
    width 130px
    height 130px
    margin-left 20px

    +media(null, $cw--size_s)
      margin 0

  &__scaleCount
    position absolute
    top 40%
    left 50%
    width 100%

    font-weight bold
    text-align center
    color $cw--color_metal
    transform translate(-50%, -50%)

  &__scaleCountHead
    display block
    margin-bottom 10px
    font-size $cw--fontSize_s
    color $cw--color_nearWhite



  &__actions
    display flex
    justify-content space-between
    cw--fontFamily_cond()

    +media(null, $cw--size_l)
      flex-direction column

  &__actionHead
    margin-bottom 12px

    font-size $cw--fontSize_l
    font-weight bold
    color $cw--color_human

  &__buttonBuy
    +media(null, $cw--size_xs)
      width 100%
      margin-top 10px

  &__convert
    +media(null, $cw--size_l)
      margin 20px 0

  &__calc
    display flex
    align-items center

    +media(null, $cw--size_xs)
      flex-wrap wrap

  &__calcCredits
    position relative
    display flex
    width 150px
    height 45px
    padding-left 55px
    box-sizing border-box
    align-items center
    margin-right 12px

    font-size 24px
    font-weight bold

    color $cw--color_credit
    background-image url(/img/game/Resource/Base/Credit/icon.svg)
    background-repeat no-repeat
    background-size 45px
    background-position left center

    &:after
      content ''
      position absolute
      right 0
      top 50%

      display block
      width 16px
      height 16px

      background-image url(/img/arrow_right.svg)
      background-repeat no-repeat
      background-position center
      background-size 100%

      transform translateY(-50%)

  &__calcProfit
    display flex
    height 45px
    box-sizing border-box
    align-items center
    padding-left 55px

    background-image url(/img/game/CGC.svg)
    background-repeat no-repeat
    background-size 45px
    background-position left center


  &__profitInput
    width 50px

  &__buttonExchange
    padding 8px 16px
    margin-left 7px

    color $cw--color_white
    border none
    outline solid 1px #AB1A11
    outline-offset -6px
    background linear-gradient(0deg, #D63C2B 40%, #FF7940 75%)

    cw--fontFamily_cond()
    font-size 20px
    font-weight bold

    +media(null, $cw--size_xs)
      width 100%
      margin 10px 0 0

    &:hover
    &:active
      filter brightness(1.4)

  &__time
    display flex
    height 45px
    align-items center