@import '{}/imports/client/ui/config'
@import '{}/imports/client/ui/responsive'
@import '{}/imports/client/ui/colors'


// => to /button/button.styl
.cw--button_flat
  color $cw--color_metal
  background-color $cw--color_black
  border solid 1px #2B6D92
  border-image linear-gradient(0deg, #56BBF3, #2B6D92) 1
  padding 10px
  font-size $cw--fontSize_main
  box-sizing border-box
  display inline-block
  cursor pointer

  &:hover
  &:focus
    outline none
    border-image linear-gradient(0deg, #56BBF3, lighten(#2B6D92,30%)) 1
// ***


.cw--UserRegister
  display flex
  width 900px
  background-color alpha($cw--color_black, .9)
  font-size $cw--fontSize_main

  &__person
    flex 0 auto
    user-select none

  &__content
    flex 1 1 auto
    display flex
    flex-direction column
    box-sizing border-box
    padding 30px 50px 30px

  &__intro
    flex 0 auto
    color $cw--color_metal

  &__form
    flex 1 0 auto

  &__switch
    flex 0 auto
    color $cw--color_metal
  &__switchHead
    margin-bottom 10px


.cw--RegisterForm

  &__title
    display block
    margin 30px 0 15px 
    font-weight bold
    color $cw--color_honor
    font-size $cw--fontSize_smallHead

  &__form
    display flex
    flex-direction row
    margin-bottom 10px

  &__inputs
    flex-basis 300px
    flex-grow 0
    flex-shrink 0
    display flex
    flex-direction row
    height 62px
  
  &__inputsGroup
    display flex
    flex-direction column
    flex-basis auto
    justify-content space-between
    margin-right 12px

  &__input
    flex 0 auto
    width 184px
    height 25px
    box-sizing border-box

  &__submit
    flex 0 auto
    width 42px
    padding 0
    background-image url(/img/arrow_login.svg)
    background-repeat no-repeat
    background-position center center
  
  &__rules
  &__code
    margin 15px 0

.cw--labeledCheckbox
  color $cw--color_metal

  &__input
    vertical-align middle