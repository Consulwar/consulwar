@import '{}/imports/client/ui/colors.styl'

.cw--button
  display flex
  align-items center
  justify-content center
  font-size 18px
  transition filter .20s ease

  &_type
    &_primary
      border 0
      padding 12px
      outline 2px solid $cw--color_black
      outline-offset -5px

      &_small
        padding 8px

      &_orange
        background linear-gradient(90deg, #FF9C2E 0%, #FFD44A 100%)

      &_blue
        background linear-gradient(90deg, #55B1E4 0%, #75EEFF 100%)

    &_secondary
      padding 8px
      border 1px solid

      &_human
        border-color $cw--color_human
        color $cw--color_human

      &_metal
        border-color $cw--color_metal
        color $cw--color_metal

      &_crystal
        border-color $cw--color_crystal
        color $cw--color_crystal

      &_honor
        border-color $cw--color_honor
        color $cw--color_honor

      &_credit
        border-color $cw--color_credit
        color $cw--color_credit
  
  &_notActive
    -webkit-filter brightness(0.5)
    filter brightness(0.5)

  &_disabled
    cursor not-allowed !important
    -webkit-filter grayscale(1) brightness(0.5) !important
    filter grayscale(1) brightness(0.5) !important

  &:hover
  &:focus
    -webkit-filter brightness(1.2)
    filter brightness(1.2)

  &_close
    border 0
    display block
    width 22px
    height 22px
    padding 7px
    background-image url(/img/game/close_new.png)
    background-repeat no-repeat
    background-position center center
    -webkit-filter grayscale(0.5)
    filter grayscale(0.5)
    cursor pointer
    
    &:hover
      -webkit-filter grayscale(0)
      filter grayscale(0)

  &_flat
    color $cw--color_metal
    background-color $cw--color_black
    border solid 1px #2B6D92
    border-image linear-gradient(0deg, #56BBF3, #2B6D92) 1
    padding 10px
    font-size $cw--fontSize_main
    box-sizing border-box
    display inline-block
    cursor pointer