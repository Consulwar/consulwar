@import './button/button.styl'

.cw--actions
  display flex
  flex-direction column
  justify-content space-between
  align-items center

  &_row
    display flex
    flex-shrink 0
    width 100%
    flex-direction row
    flex-wrap wrap
    justify-content space-between
    margin 4px 0

    .cw--button
      width 48%

  > .cw--button
    width 60%
    margin 4px 0

  .cw--font_cond
    font-family 'Roboto Condensed', Arial, sans-serif
