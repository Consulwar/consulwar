@import '{}/imports/client/ui/config'
@import '{}/imports/client/ui/colors'
@import '{}/imports/client/ui/responsive'

.cw--PageScreens
  position relative
  height 100%
  width 100%
  display flex
  flex-direction column
  
  &__theater
    flex-grow 1
    position relative
    
    +media(null, $cw--size_xl)
      display none
      position fixed
      left 0
      top 0
      height 100%
      width 100%
      background-color alpha($cw--color_black, .7);
      z-index 100

  &__theaterShow
    +media(null, $cw--size_xl)
      display block

  &__goBack
  &__goNext
    position absolute
    z-index 1
    cursor pointer
    width 50%
    height 100%
    top 0
    background transparent
    border none
    &:focus
      outline none
    
    +media(null, $cw--size_xl)
      height 70%
      top 15%

  &__goNext
    right 0
  &__goBack
    left 0

  &__fullImg
    display block
    position absolute
    max-width 100%
    max-height 100%
    left 50%
    top 50%
    transform translate(-50%,-50%)
    margin auto

  &__thumbs
    flex-grow 0
    display flex
    flex-wrap wrap
    justify-content center
    max-width 1100px
    margin auto
  
  &__thumb
    cursor pointer
    padding 6px
    box-sizing border-box
    flex-basis 20%
    flex-grow 0

    +media($cw--size_s, $cw--size_xl)
      flex-basis auto
    +media(null, $cw--size_s)
      flex-basis 50%

  &__thumbImg
    max-width 100%
    height auto
    display block
    margin auto
  &__current
    outline-style solid
    outline-offset -1px
    outline-width 2px
    outline-color $cw--color_metal

  &__close
    display none
    position absolute
    right 20px
    top 20px
    border solid 1px #D65F52
    border-image linear-gradient(0deg, #812920, #D65F52) 1
    background-image url(/img/close.svg)
    background-repeat no-repeat
    background-position center
    background-color $cw--color_black
    width 30px
    height 30px
    box-sizing border-box
    z-index 2
    +media(null, $cw--size_xl)
      display block
