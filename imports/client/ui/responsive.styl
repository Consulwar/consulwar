// Mixin Media

media($min-width, $max-width)
  min-width = $min-width != null ? 'and (min-width: $min-width) ' : ''
  max-width = $max-width != null ? 'and (max-width: $max-width - 1)' : ''
  media = 'all '+ min-width + max-width
  @media media
    {block}


