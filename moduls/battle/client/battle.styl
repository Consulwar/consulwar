.content.battle
	.rating
		position relative
		//width 1000px
		height 435px
		margin-left 124px
		background-color #04080B
		overflow-y auto
		
		table
			width 100%
			border-collapse collapse
			
			tr
				height 40px
				
				&:nth-child(odd):not(.header)
					background-color #0B121A
				
				&:nth-child(even)
					background-color #0E1821
					
				&.me
					color #ABC851
				
			td, th
				text-align left
					
			td:first-child, th:first-child
				width 20px
				padding 12px
				text-align center
				
	.information.battle
		.description
			ul.enemies
				li
					display block
					color #bf8b38
					font-weight bold
					
					.amount
						color #e0e0e0

