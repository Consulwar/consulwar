.modal
	&.blackmarket
		position fixed
		z-index 100
		top 50%
		left 50%
		margin -235px 0 0 -200px
		width 470px
		height 200px
		padding 0
		font-weight bold
		text-align center
		color #FFFFFF
		border none
		background none

		.close
			top 20px
			right -60px

		.top
			display block
			position absolute
			left 0px
			width 470px
			height 177px
			background-repeat no-repeat
			background-image url(/img/game/blackmarket/container_top.png)
			
		.bottom
			display block
			position absolute
			left 24px
			width 427px
			height 73px
			background-repeat no-repeat
			background-image url(/img/game/blackmarket/container_bottom.png)
			
		.container
			display block
			position absolute
			left 62px
			width 350px
			overflow hidden
			
			.title
				display none
				position absolute
				bottom 20px
				left 0
				width 100%
				height 35px
				padding-top 10px
				font-size 22px
				white-space nowrap
				text-align center
				background-color rgba(0, 0, 0, 0.5)

		.resources
			position absolute
			left 200px
			top 260px

		.open
			position absolute
			display block
			left 150px
			top 340px
			width 177px
			height 34px
			padding-top 12px
			cursor pointer
			color #FFFFFF
			text-align center
			text-transform uppercase
			text-decoration none
			font-weight bold
			font-size 18px
			background-image url(/img/game/earth/btn_spec.png)
			background-repeat no-repeat
			background-size 100% 100%
			&:hover
				-webkit-filter brightness(1.4)
				filter brightness(1.4)

		.take
			display none
			position absolute
			cursor pointer
			left 150px
			top 420px
			width 181px
			height 40px
			padding-top 10px
			font-weight bold
			font-size 24px
			color #FFFFFF
			background-image url(/img/game/quests/btn_take.png)
			
			&:hover
				-webkit-filter brightness(1.4)
				filter brightness(1.4)