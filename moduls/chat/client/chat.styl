  .messages
    position relative
    background-color #13161b
    height 100%
    width 100%
    flex-shrink 10
    overflow-y auto
    overflow-x hidden
    
    li
      position relative
      display block
      padding 2.5px
      background-color #13161b
      
      p
        cursor pointer

      .profile:hover
      .profile.selected
      p:hover
        -webkit-filter brightness(1.4)
        filter brightness(1.4)

      .username
        position absolute
        top 3px
        left 50px
        width 150px
        
        &.me
          color #ABC851
        
      .role
        position absolute
        top 22px
        left 50px
        width 150px
        
      &.message
        position relative
        display inline-block
        vertical-align top
        max-width calc(100% - 200px)
        width 100%
        line-height 19px
        color #dcdcdc
        float right
        padding 0px

      span
        color #C4ABA1
        
        &:not(.dice)
          cursor pointer
          
        &.dice
          color #3eb5f1

        &.medice
          color #F0F8FF
          opacity .5

          &.selected
            color #8eb021
            opacity 1
      
      &.motd
        text-align center
        clear both

      &.more
      &.missed
        height 48px
        padding 13px 0
        box-sizing border-box
        cursor pointer
        text-align center
        background-color #0f1116
        clear both
        
        span
          color #dfdfdf
        
          &:before
          &:after
            margin 0 20px
            vertical-align middle
            display inline-block
            content url(/img/game/chat/more.png)
      
      &.limit
        text-align center
        color #A15755

      .remove
      .removeModerator
      .block
      .changeMinRating
        color red

      .lovereptiles
      .notprepared
        font-style italic
        color red
      
      .add
      .addfunds
      .addModerator
      .unblock
        color green
        
      .sepukku
        color #ff5441
        
      .status
        font-style italic

      .positive_number
        color #009900

        &.roomModifier
          color #008000

      .negative_number
        color #dc6257

        &.roomModifier
          color red
