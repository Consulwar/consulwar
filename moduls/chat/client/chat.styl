				filter brightness(1.4)

			.username
				position absolute
				top 3px
				left 50px
				width 150px
				
				&.me
					color #ABC851
				
			.role
				position absolute
				top 22px
				left 50px
				width 150px
				
			&.message
				position relative
				display inline-block
				vertical-align top
				max-width 840px
				width 100%
				line-height 19px
				color #dcdcdc
				float right
				padding 0px

			span
				color #C4ABA1
				
				&:not(.dice)
					cursor pointer
					
				&.dice
					color #3eb5f1

				&.medice
					color #F0F8FF
					opacity .5

					&.selected
						color #8eb021
						opacity 1
			
			&.motd
				text-align center
				clear both

			&.more
			&.missed
				cursor pointer
				text-align center
				background-color #0f1116
				clear both
				
				span
					color #dfdfdf
				
