.side_menu
	//side-icon('alliance')
	side-icon('chat')

.chat
	position relative
	z-index 2
	margin-left 124px
	padding 3.5px
	height 428px
	background-color #0C131D
	
	.messages
		position relative
		height 338px
		width 1100px
		padding 11px
		overflow-y auto
		overflow-x hidden
		
		li
			position relative
			display block
			
			span
				color #C4ABA1
				
				&:not(.dice)
					cursor pointer
				
				&.me
					color #ABC851
					
				&.dice
					color #3eb5f1
			
			&.motd
				text-align center
				span
					display none

			&.more
				cursor pointer
				text-align center
				color #9399b1
			
			&.limit
				text-align center
				color #A15755

			&.remove
				color red
				
			&.removeModerator
				color red

			&.lovereptiles
			&.notprepared
				font-style italic
				color red

			&.block
				color red
			
			&.add
				color green
				
			&.addfunds
				color green
			
			&.addModerator
				color green

			&.unblock
				color green
				
			&.sepukku
				color #ff5441
				
			&.status
				font-style italic
					
			&.admin
				span:not(.dice):not(.me)
					color #C04C3F
					
			&.helper
				span:not(.dice):not(.me)
					color #8D5AA7

			.block
				position absolute
				top 0
				right 70px
				display none
				font-style normal
				color #777777
				&:hover
					color #FFFFFF
			
			.unblock
				position absolute
				top 0
				right 5px
				display none
				font-style normal
				color #777777
				&:hover
					color #FFFFFF
			
			&:hover
				background-color rgba(255, 255, 255, 0.02)
				.block
					display block
				.unblock
					display block
	
	form
		height 69px
		
		textarea
			width 445px
			height 62px
			padding 2px
			border 1px solid #1D2D3C
			background-color #090E14
			color #fff
			resize none
			vertical-align top
			font-size 17px
			overflow hidden
			
		input
			width 200px
			height 62px
			padding 2px
			border 1px solid #1D2D3C
			background-color #090E14
			color #fff
			resize none
			vertical-align top
			font-size 17px
			overflow hidden

		[type="submit"]
			width 120px
			height 68px
			padding 2px
			border 1px solid #1D2D3C
			background-color #090E14
			color #5787AF
			vertical-align top
			cursor pointer
			
		ul
			display inline-block
			padding-top 5px
		
		button
			width 200px
			height 58px
			color #C8F909
			border 1px solid #C8F909
			background-color #090E14
			padding 0 15px
			margin-top 6px
			vertical-align top
			cursor pointer
		
	.participants
		list-style-type none
		float right
		width 180px
		height 338px
		overflow-y auto
		overflow-x hidden
		padding 11px
		text-align left
		
		li
			color #777777
		
			span
				cursor pointer
			
			&.online
				color #FFFFFF
			
			.addModerator, .removeModerator, .createRoom, .removeRoom
				cursor pointer
				color #777777
				&:hover
					color #FFFFFF

			.remove
				display none
				float right
				cursor pointer
				color #777777
				&:hover
					color #FFFFFF
			
			&:hover
				background-color rgba(255, 255, 255, 0.02)
				.remove
					display block

	.addCredits
		cursor pointer	

	#control
		position absolute
		right 0px
		bottom 0px
		height 69px


.chatRoomsList
	position relative
	margin 25px auto 0
	width 1464px
	text-align left
	
	li
		display inline-block
		border-radius 10px
		background-color #6B722D
		margin-right 10px
		
		&.general
			background-color #C17700

		&.help
			background-color #3B8386

		a
			display block
			padding 10px
			text-decoration none
			font-weight bold
			color #FFFFFF
			

.chatAccept
.chatHelp
.chatBalance
.chatBlock
.chatSettings
.chatIcons
	display inline-block
	position fixed
	z-index 100
	top 50%
	left 50%
	transform translate(-50%, -50%)
	background-image none
	background-color #13161b

	input
		padding 10px 7px
		border 2px solid #006382
		background-color #C0C0C0
		border-radius 5px
		box-shadow inset 2px 2px 2px #000
		color #000000
		font-weight bold
		font-size 14px

	.close
		cursor pointer
		display block
		position absolute
		z-index 4
		right 5px
		top 5px
		width 30px
		height 30px
		background-image url(/img/game/cosmomap/button_close.png)
		background-repeat no-repeat
	
		&:hover
			background-image url(/img/game/cosmomap/button_close_active.png)
			
	.button
		display inline-block
		cursor pointer
		background-repeat no-repeat
		font-size 24px
		font-weight bold
		text-align center
		color #FFFFFF
		
		&:hover
			-webkit-filter brightness(1.4)
			filter brightness(1.4)
				
		&.accept
		&.cancel
			width 106px
			height 35px
			padding-top 5px
		
		&.accept
			background-image url(/img/game/chat/accept.png)
			
		&.cancel
			background-image url(/img/game/chat/cancel.png)
			
.chatAccept
	padding 20px
	padding-bottom 60px
	width 400px
	
	.accept
		position absolute
		right 50%
		transform translate(-40px, 0)
		
	.cancel
		position absolute
		left 50%
		transform translate(40px, 0)

	span
		display block
		font-weight normal
		font-size 14px
		text-align center
		margin-bottom 20px
		
		&.title
			color #e9a844
		
		&.message
			color #56baf2
			
.chatHelp
	width 560px
	transform translate(-50%, -200px)
	background-color #030303

	td
		padding-left 10px

	&:after
		display block
		content ""
		width 100%
		height 10px
		background-color #13161b

	.close
		right -30px
		top -30px

	.tabCommands
	.tabRules
		display block
		cursor pointer
		position absolute
		width 280px
		height 30px
		padding-top 10px
		background-color #13161b
		text-align center
		font-size 14px
		font-weight bold
		color #e8e8e8
		
		&.active
			background-color #292f3b
			color #56baf2
		
		&:hover
			-webkit-filter brightness(1.4)
			filter brightness(1.4)
				
	.tabCommands
		left 0px
	
	.tabRules
		right 0px
		
	.rules
	.commands
		padding 50px 10px 10px 10px
		font-size 14px
		color #888888
	
.chatBalance
	width 420px
	transform translate(-50%, -200px)
	background-color #13161b
	
	label
		display block
		position absolute
		top 30px
		left 30px
		width 230px
		background-repeat no-repeat
		background-position bottom right
		background-image url(/img/game/credits.png)

		input
			width 152px
			margin-bottom 5px

		.title
			display block
			color #56baf2
			font-weight bold
			font-size 14px
			margin-bottom 10px

	.button
		&.accept
			position absolute
			left 280px
			top 57px
			text-transform uppercase
			font-weight bold
			font-size 14px
			padding-top 10px
			height 30px

	.historyTitle
		display block
		margin-top 110px
		font-weight bold
		font-size 14px
		color #FFFFFF
		text-align center
		padding 10px

	.data
		padding 10px
		background-color #030303
		font-size 14px
		color #888888
		
		table
			width 100%
	
	.pages
		width 100%
		height 40px
		background-color #13161b