.permanent_chat
  display none
  position relative
  width 960px
  height 100%
  flex-grow 0
  flex-shrink 1
  z-index 3
  margin 0 auto
  background-color rgba(0, 0, 0, 0.8)
  
  &.wide
    width 100%
    
  .channelCreate,
  .channelList
    position relative
    display flex
    flex-wrap wrap
    align-items center
    justify-content center
    flex-grow 0
    flex-shrink 0
    padding 15px
    background-color rgba(0, 0, 0, 0.4)
    overflow auto
    
    &.hide
      display none
    
    h1
      width 100%
      
    ul
      list-style-type none
  
  .channelList
    justify-content flex-start
    flex-shrink 1
    
    ul
      font-size 30px
      width 100%
    
    li
      cursor pointer
      
      &:hover
        -webkit-filter brightness(1.2)
        filter brightness(1.2)

  .chat
    display flex
    flex-direction column
    height 100%
    width 100%
    
  .roomsList,
  .channelList  
    .addChannel
      display inline-block
      height 24px
      width 24px
      transform rotate(45deg)
      background-image url(img/game/close.png)
      background-size 100%
      float right
      background-color transparent
      border none

    .listContainer
      display inline-block
      float left
      width 853px
      height 46px
      overflow hidden
      background-color #090a0d

    ul
      position relative
      white-space nowrap
      vertical-align top
      margin 5px
      list-style-type none
      
      li
        display flex
        align-items center
        justify-content space-between
        height 30px
        &.active
          background-color #13161b

        a
          vertical-align middle
          display inline-block
          text-decoration none
          font-weight bold
          color #dfdfdf
          
          &:before
            vertical-align middle
            display inline-block
            content ""
            width 10px
            height 10px
            margin-right 8px
            border-radius 50%
            border 4px solid #bd32fb
            background-color #532167
            
          &.credits:before
            border 4px solid #bff632
            background-color #555e33
          
          &.public:before
            background none
          
        .hide
          vertical-align middle
          cursor pointer
          display inline-block
          margin-left 10px
          width 30px
          height 30px
          background-image url(/img/game/cosmomap/button_close.png)
          background-repeat no-repeat
        
          &:hover
            background-image url(/img/game/cosmomap/button_close_active.png)

  .channels
    position relative
    display flex
    flex-direction column
    width 180px
    height 100%
    box-sizing border-box
    
    nav
      position relative
      display flex
      flex-direction column
      width 100%
      padding 8px
      min-height 120px
      flex-shrink 1
      flex-grow 0
      flex-basis 1
      box-sizing border-box
      overflow-y auto
      overflow-x hidden
      z-index 1
    
      > a
        display flex
        flex-shrink 0
        height 30px
        align-items center
        justify-content flex-start
        vertical-align middle
        text-decoration none
        font-weight bold
        color #dfdfdf
        overflow hidden
        
        &.active
          background-color #13161b
        
        &:before
          vertical-align middle
          display inline-block
          content ""
          width 10px
          height 10px
          margin-right 8px
          border-radius 50%
          border 4px solid #bd32fb
          background-color #532167
          flex-shrink 0
          
        &.credits:before
          border 4px solid #bff632
          background-color #555e33
        
        &.public:before
          background none

        &:hover
          -webkit-filter brightness(1.2)
          filter brightness(1.2)
            
        span
          overflow hidden
          
        .hide
          display inline-block
          margin 0 0 0 auto
          width 30px
          height 30px
          background-image url(/img/game/cosmomap/button_close.png)
          background-repeat no-repeat
          flex-shrink 0
          background-color transparent
          border none
        
          &:hover
            background-image url(/img/game/cosmomap/button_close_active.png)

    .toggle
      position absolute
      height 100%
      width 20px
      right 0
      display flex
      justify-content center
      align-items center  
      background-color rgba(0, 0, 0, 0.4)
      border 0
      cursor pointer
      z-index 0
      
      &:before
        content url(/img/game/arrow.png)
        position absolute
        transform scaleX(1)
        -webkit-filter grayscale(1) brightness(0.5)
        filter grayscale(1) brightness(0.5)

      &:hover
        -webkit-filter brightness(1.2)
        filter brightness(1.2)
          
        &:before
          -webkit-filter grayscale(0)
          filter grayscale(0)

    &.hide
      width 20px
      overflow hidden
      > *:not(.toggle)
        display none
      .toggle
        &:before
          transform scaleX(-1)

    .roomsPopup
      position absolute
      z-index 2
      top 46px
      right 185px
      background-color #0b0b0b
      width 200px
      
      ul
        display block
        max-height 500px
        overflow-x hidden
        overflow-y auto
        
        li
          display block
          padding 10px
          font-weight bold
          color #56baf2
          
          input
            vertical-align middle
            margin-right 10px
        
          
      .save
        display inline-block
        cursor pointer
        background-repeat no-repeat
        background-size 100% 100%
        background-image url(/img/game/chat/accept.png)
        font-size 24px
        font-weight bold
        text-align center
        color #FFFFFF
        width 150px
        height 35px
        padding-top 5px
        margin-top 10px
        margin-bottom 10px
        margin-left 25px
      
        &:hover:not(.disabled)
          -webkit-filter brightness(1.4)
          filter brightness(1.4)
    
  
