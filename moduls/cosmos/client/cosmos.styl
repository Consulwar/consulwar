.map-planet-marker
	
	cursor pointer

	&:before
		content ""
		position absolute
		display block
		top 4%
		left 4%
		width 92%
		height 92%
		background-size 200% 100%
		background-repeat repeat-x
		border-radius 50%
		transform rotate(30deg)
		background-image url(/img/game/cosmomap/planets/helium.jpg)
	
	&:after
		content ""
		background-size 100% 100%
		background-image url(/img/game/cosmomap/planet_shadow_new.png)
		position absolute
		display block
		top 4%
		left 4%
		width 92%
		height 92%

