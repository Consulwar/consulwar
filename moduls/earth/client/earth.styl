			height 20px
			width 100%
			text-align center
			
		.count
			position relative
			margin-top 5px
			width 100%
			height 20px
			padding-top 2px
			-webkit-box-shadow inset 2px 2px 4px 0px rgba(0,0,0,0.75);
			-moz-box-shadow inset 2px 2px 4px 0px rgba(0,0,0,0.75);
			box-shadow inset 2px 2px 4px 0px rgba(0,0,0,0.75);
			border-radius 5px
			border 2px solid #335168
			background-color #adadad
			text-align center

#map-earth
	z-index 1
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	background-color #000

.earth-marker
	color #FFFFFF
	pointer-events none
	
	&:before
		content ""
		position absolute
		display block
		top 27.5%
		left 27.5%
		width 45%
		height 45%
		background-size 100% 100%
		background-repeat no-repeat
		background-position center center
		border-radius 50%
	
	canvas
		position absolute
	
	span
		position relative
		display block
		font-weight bold
		font-size 14px
		width 100%
		text-align center
		color #b6c5d3
		pointer-events none
	
.earth-marker-enemy:before
	background-image url(/img/game/cosmomap/ico_rept.png)
	-webkit-box-shadow: 0px 0px 50px 5px rgba(189,82,72,1)
	-moz-box-shadow: 0px 0px 50px 5px rgba(189,82,72,1)
	box-shadow: 0px 0px 50px 5px rgba(189,82,72,1)
	
.earth-marker-our:before
	background-image url(/img/game/cosmomap/ico_humans.png)
	-webkit-box-shadow: 0px 0px 50px 5px rgba(73,128,191,1)
	-moz-box-shadow: 0px 0px 50px 5px rgba(73,128,191,1)
	box-shadow: 0px 0px 50px 5px rgba(73,128,191,1)
	
.earth-marker-battle:before
	background-image url(/img/game/earth/ico_battle.png)
	-webkit-box-shadow: 0px 0px 50px 5px rgba(233,168,68,1)
	-moz-box-shadow: 0px 0px 50px 5px rgba(233,168,68,1)
	box-shadow: 0px 0px 50px 5px rgba(233,168,68,1)
	
.earth-marker-connection-text
	font-weight bold
