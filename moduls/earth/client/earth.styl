@import '{}/imports/client/ui/colors'

.content.earth
  
  &:not(.research):not(.earthReserve):not(.earthZone)
    display block
    position absolute
    left 0
    top 0
    width 100%
    height 100%
  
  .overlay
    display none
  
  #map-content
    width 100%
    height 100%
    max-width none
    padding 0

#map-earth
  z-index 1
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  background-color $cw--color_tableOdd

.earth-marker
  color #FFFFFF
  pointer-events none !important

  *
    pointer-events none !important
  
  &:before
    content ""
    position absolute
    display block
    top 27.5%
    left 27.5%
    width 45%
    height 45%
    background-size 100% 100%
    background-repeat no-repeat
    background-position center center
    border-radius 50%
  
  canvas
    position absolute
  
  span
    position relative
    display block
    font-weight bold
    font-size 14px
    width 100%
    text-align center
    color #b6c5d3
    pointer-events none
  
.earth-marker-enemy:before
  background-image url(/img/game/earth/reptile_icon.svg)
  
.earth-marker-our:before
  background-image url(/img/game/earth/consul_icon.svg)
  
.earth-marker-battle:before
  background-image url(/img/game/earth/battle_icon.svg)

.earth-marker-startZone:before
  background-image url(/img/game/earth/startZone_icon.svg)
  
.earth-marker-connection-text
  font-weight bold
  font-size 16px
  pointer-events none

.earth-marker-not-visible
  -webkit-filter grayscale(0.8)
  filter grayscale(0.8)

.btn-history-earth
  cursor pointer
  display block
  position absolute
  z-index 3
  bottom 10px
  right 10px
  font-size 16px
  text-align center
  text-decoration none
  padding-top 14px
  padding-bottom 14px
  width 150px
  background-color #000000
  border 2px solid #80BAEC
  color #80BAEC

