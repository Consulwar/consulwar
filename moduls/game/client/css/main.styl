*
	margin 0
	padding 0
	
html, body
	background-color #000
	color #fff
	font-family Arial
	font-size 14px
	height 100%

body
	min-width 1465px
	
@media (max-width: 1024px)
	body
		min-width 1024px
		zoom 0.68

@media (max-width: 1465px)
	body
		min-width 1024px
		zoom 0.86

@media (min-width: 1900px)
	body
		min-width 1024px
		zoom 1.20

a
	color #fff

.disconnected
	display inline-block
	position fixed
	z-index 100
	top 50%
	left 50%
	min-width 400px
	padding 20px
	transform translate(-50%, -50%)
	color #F2643E
	text-align center
	font-size 18px
	font-weight bold
	border 2px solid #742222
	border-radius 10px
	background-color #0b0d0f
	
	span
		color #FFFFFF

ul
	&.notifications
		position fixed
		width 450px
		
		li
			&.notification
				background-color rgba(0, 0, 0, 0.8)
				
				&.info
					color #56BAF2
				
				&.success
					color #B5D054
				
				&.error
					color #D65F53
				
				.title
				.message
					overflow hidden
					text-overflow ellipsis
					white-space nowrap
				
				.closeButton
					display none