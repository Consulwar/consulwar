.top_menu
	width 100%
	text-align center
	li
		display inline-block
		margin 10px 15px
		
		&:first-child
			padding-left 250px
		
		a
			color #5E8CCA
			text-decoration none
			font-size 15px
			
			&:hover
				text-decoration underline

.menu
	position relative
	margin 0 auto
	width 1464px
	padding-bottom 18px
	
	.resources
		margin-right 20px
	
	ul,
	.fleet_info
		display inline-block
		vertical-align top
	
	.fleet_info
		width 328px
		height 60px
		padding 9px 20px 0 0
		background-image url(/img/game/fleet_bg.png)
		background-repeat no-repeat
		background-position center center
		color #9399B1
		text-align right
		font-size 16px
		
		&.attack:before
			content ""
			position absolute
			display block
			width 73px
			height 49px
			background-image url(/img/game/attack.png)
			background-position-x 15px
			background-repeat no-repeat
			
		a
			text-decoration none
			&:hover
				-webkit-filter brightness(1.4)
				filter brightness(1.4)
	
	.game_menu 
		a
			display block
			width 64px
			height 64px
			
		li
			display inline-block
			width 64px
			height 64px
			background-color #090E14
			border 2px solid #263D4F
			border-radius 5px
			cursor pointer
			margin-right 12px
			text-decoration none
			background-repeat no-repeat
			background-position center center
			
			&:not([disabled]):hover,
			&.active
				border-color #80BAEC
		
		menu-icon('planet')
		menu-icon('army')
		menu-icon('research')
		menu-icon('powerups')
		menu-icon('alliance')
		menu-icon('cosmos')
		menu-icon('communication')
		menu-icon('reptiles')
		menu-icon('mutual')
		
		.communication-icon.has_new_mail,
		.communication-icon.has_new_mail.active,
		.communication-icon.has_new_mail:hover
			background-image url(/img/game/menu/communication_n.png)

.side_menu
	float left
	width 124px
	li
		position relative
		display block
		width 124px
		height 145px
		background-color #04070C
		cursor pointer
		background-position center 30px
		background-repeat no-repeat

		&:hover,
		&.active
			background-color #18202B
		
		&.progress:after
			content url(/img/game/progress.png)
			position absolute
			top 58px
			left -46px
			
		&.progress:before
			content attr(data-remaining)
			position absolute
			top 62px
			left -125px
			color #E7B04C
			font-size 18px
	
	a
		display block
		width 100%
		height 50px
		padding-top 95px
		text-align center
		text-decoration none
	
	.helpusplease
		padding 3px
		width 114px
		height 135px
		border 2px solid red
		a
			display inline
			width auto
			height auto

	side-icon('counsul')
	
