.content
	.paymentHistory
		position relative
		height 435px
		margin-left 0px
		background-color #04080B
		z-index 10
	
		.data
			height 355px
			overflow-y auto
			
		table
			width 100%
			border-collapse collapse

			tr
				height 40px

				&:nth-child(odd):not(.header)
					background-color #0B121A
				
				&:nth-child(even)
