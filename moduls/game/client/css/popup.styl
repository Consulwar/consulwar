.popup
	position absolute
	top 0
	left 0
	display flex
	width 100%
	height 100%
	justify-content center
	align-items center
	background-color rgba(0, 0, 0, 0.5)
	overflow hidden
	
	> *:first-child
		position relative
		max-width 100%
		min-height 50px
		max-height 100%
		overflow auto

	.close
		position absolute
		top 0
		right 0
		display block
		width 22px
		height 22px
		background-image url(/img/game/close_new.png)
		background-repeat no-repeat
		background-position center center
		padding 7px
		-webkit-filter grayscale(0.5)
		filter grayscale(0.5)
		cursor pointer
		
		&:hover
			-webkit-filter grayscale(0)
			filter grayscale(0)