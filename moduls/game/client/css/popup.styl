.popup
  position absolute
  top 0
  left 0
  display flex
  width 100%
  height 100%
  justify-content center
  align-items center
  background-color rgba(0, 0, 0, 0.5)
  overflow hidden
  outline none
  
  > *:first-child
    position relative
    max-width 100%
    min-height 50px
    max-height 100%
    overflow auto

.cw--popup
  &__close
    position absolute
    top 10px
    right 10px
    z-index 1
