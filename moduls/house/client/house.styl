house-element(group, name, x, y, z)
	.{group}-{name}
		position absolute
		display block
		content url("/img/game/house/" group "/" name ".png")
		left x px
		top y px
		z-index z

house-group-icon(group)
	.{group}-icon
		background-image url("/img/game/house/" group "/icon.png")

house-item-icon(group, name)
	.{group}-{name}-icon
		background-image url("/img/game/house/" group "/i/" name ".png")


.content
	.overlay.planet.house
		background-image url(/img/game/house/back.jpg)
		z-index 1
		
	.consul
		position absolute
		display block
		content url(/img/game/house/consul.png)
		left 580px
		top 120px
		z-index 10


