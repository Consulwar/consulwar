house-element(group, name, x, y, z)
	.{group}-{name}
		position absolute
		display block
		content url("/img/game/house/" group "/" name ".png")
		left x px
		top y px
		z-index z

house-element-back(group, name)
	.{group}-{name}
		position absolute
		display block
		content url("/img/game/house/" group "/" name ".jpg")
		left 124px
		top 0px
		z-index 1

house-group-icon(group)
	.{group}-icon
		background-image url("/img/game/house/" group "/icon.png")

house-item-icon(group, name)
	.{group}-{name}-icon
		background-image url("/img/game/house/" group "/i/" name ".png")


