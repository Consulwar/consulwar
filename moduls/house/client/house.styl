	overflow-x hidden
	overflow-y scroll
	position relative
	float right
	margin-top -20px
	margin-right -20px
	margin-left 10px
	width 638px
	height 428px
	background-color #090E14

	li
		display inline-block
		width 115px
		height 165px
		margin-left 4px
		margin-bottom 4px

	a
		cursor pointer
		display block
		border 3px solid #1A3552
