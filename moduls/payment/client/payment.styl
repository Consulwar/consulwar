.side_payment
  position relative
  width 340px
  height 433px
  margin-left auto
  z-index 2
  color #B1B1B1
  
  h2
    color #E9A844
    font-size 20px
    font-weight bold
    text-align center
    padding-top 10px
    
  a
    display inline-block
    width 165px
    color #56BAF2
    text-align center
    text-decoration none
    
    &:hover
      -webkit-filter brightness(1.4)
      filter brightness(1.4)
      
  .buy
    display block
    cursor pointer
    background-image url(/img/game/payment/buy.png)
    background-repeat no-repeat
    margin 20px 10px
    width 145px
    height 95px
    padding-left 170px
    padding-top 10px
    
    &:hover
      -webkit-filter brightness(1.4)
      filter brightness(1.4)
        
    .yellow
      color #E9A844
      
    .blue
      color #56BAF2


.smoke
  &.reward
    z-index 199

.payment
  position relative
  width 960px
  height 540px
  padding 10px
  box-sizing border-box
  background-color $color-black
  font-size 14px
  color $color-ggk
  overflow auto
  
  > span
    color $color-white

  &.platbox
    width 1030px
    height 95%
    max-width 100%
    max-height 730px
    padding 10px
    overflow hidden
    
    iframe
      width 100%
      height 100%
      background-color #FFFFFF
      
  &.teko
    width 476px
    height 652px
    max-width 100%
    max-height 652px
    padding 10px
    overflow hidden

    iframe
      width 100%
      height 100%
      background-color #FFFFFF

.content
  .paymentHistory
    position relative
    height 435px
    margin-left 0px
    background-color #04080B
    z-index 10
  
    .data
      height 355px
      overflow-y auto
      
    table
      width 100%
      border-collapse collapse

      tr
        height 40px

        &:nth-child(odd):not(.header)
          background-color #0B121A
        
        &:nth-child(even)
          background-color #0E1821
        
      td, th
        text-align left
          
        &:nth-child(1)
          padding-left 10px
          width 150px
      
        &:nth-child(2)
          width 350px
        
        &:nth-child(3)
          width 200px
