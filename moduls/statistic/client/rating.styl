.content
	.rating
		position relative
		height 435px
		margin-left 124px
		background-color #04080B
		z-index 10
		
		h2
			padding-top 20px
			width 100%
			text-align center

		.data
			display block
			height 355px
			overflow-y auto

		table
			width 100%
			border-collapse collapse

			tr
				height 40px
				
				&:nth-child(odd):not(.header)
					background-color #0B121A
				
				&:nth-child(even)
					background-color #0E1821
					
				&.me
					color #ABC851
				
			td, th
				text-align left
				
				&:nth-child(1)
					width 100px
					padding 12px
					text-align center

				&:nth-child(2)
					width 300px
					
				&:nth-child(3)
					width 400px
					
				&:nth-child(4)
					width 400px
				
				a
					text-decoration none

				img
					margin-left 5px