.content
	.statistic
		position relative
		height 490px
		background-color #04080B
		z-index 10

		.consulInfo
			background-color #0E1821
			position absolute
			display flex
			left 385px
			top 0px
			height 70px
			width 1040px
			padding 20px
	
			a
				text-decoration none
				display inline-block
				width 70px
				height 70px

			.user
				display flex
				width 600px
				height 70px

				.text
					margin-left 10px
					padding-top 5px
					height 70px
					font-size 18px
					font-weight bold

					.userName
						color #d6b69c

					.allianceName
						color #56baf2

				.activity
					font-size 15px
					margin-left 40px
					width 300px
					height 70px
					padding-top 10px

					.status
						&.active
							font-weight bold
							color #56baf2
							&:after
								content "Активен"

						&:not(.active)
							color red
							&:after
								content "Не активен"

				img
					width 70px
					height 70px

			.powerOfVoice
				display flex
				width 200px
				height 70px
				border 2px solid #6b5737
				background-color #131313

				.icon
					display block
					width 85px
					height 70px
					background-repeat no-repeat
					background-position center
					background-image url("/img/game/statistics/power_of_voice.png")

				.text
					font-size 14px
					font-weight bold
					display block
					width 110px
					height 70px
					text-align center
					padding-top 15px

					.number
						font-size 24px
						color #e9a844


			.additionalButtons
				height 70px
				margin-left 10px

				a:hover
					-webkit-filter brightness(1.4)
					filter brightness(1.4)

		.achievements
			background-color #131313
			position absolute
			display flex
			left 385px
			top 110px
			height 340px
			width 1040px
			padding 20px

			img
				width 70px
				height 70px
				margin 10px

		.button
			cursor pointer
			display block
			background-repeat no-repeat
			background-position center
			-webkit-filter grayscale(1)
			filter grayscale(1)

			&:hover
				-webkit-filter brightness(1.4)
				filter brightness(1.4)

			&.active
				-webkit-filter brightness(1)
				filter brightness(1)

		.types
			width 100px

			.general
			.science
			.cosmos
			.battle
			.communication
				margin-left 5px
				width 70px
				height 70px

				&.active
					background-color #0c1409
					&:after
						position absolute
						left 0
						content " "
						height 70px
						width 5px

			.general
				background-image url("/img/game/statistics/general.png")
				&:after
					background-color #42c7ff
			.science
				background-image url("/img/game/statistics/science.png")
				&:after
					background-color #a6b131
			.cosmos
				background-image url("/img/game/statistics/cosmos.png")
				&:after
					background-color #d6645e
			.battle
				background-image url("/img/game/statistics/battle.png")
				&:after
					background-color #d6925e
			.communication
				background-image url("/img/game/statistics/communication.png")
				&:after
					background-color #785ed6

		.search, .returnToMe
			margin-top 10px
			display block
			position absolute
			top 0px
			width 40px
			height 40px

		.search
			left 130px
			background-image url("/img/game/statistics/search.png")

		.returnToMe
			left 80px
			background-image url("/img/game/statistics/my_position.png")
			
		input
			top 0px
			margin-top 10px
			padding 10px 7px
			border 2px solid #006382
			background-color #C0C0C0
			border-radius 5px
			box-shadow inset 2px 2px 2px #000
			color #000000
			font-weight bold
			font-size 14px
			position absolute
			left 174px
			width 185px

	.rating
		position absolute
		top 55px
		height 435px
		width 310px
		margin-left 75px
		background-color #04080B
		z-index 10

		h2
			padding-top 20px
			width 100%
			text-align center

		.data
			display block
			height 355px
			overflow-y auto

		table
			width 100%
			border-collapse collapse
			position relative

			tr
				height 40px
				
				&:nth-child(odd):not(.header):not(.selectedUser):not(:hover)
					background-color #0B121A
				
				&:nth-child(even)
					background-color #0E1821
				
				&:hover:not(.header)
					cursor pointer
					background-color #000015

				&.selectedUser
					color #0081e5
					background-color #000015

					&:after
						position absolute
						left 0
						content " "
						height 40px
						width 5px
						background-color #56bbf3

				&.me
					color #ABC851
				
			td, th
				text-align left
				
				&:nth-child(1)
					width 50px
					padding 12px
					text-align center

				&:nth-child(2)
					width 150px

				&:nth-child(3)
					width 80px

				img
					margin-left 5px


.detailStatistic
	display block
	position fixed
	z-index 100
	top 50%
	left 50%
	transform translate(-50%, -50%)
	background-image none
	background-color #030303
	width 560px
	height 400px
	font-size 0

	.close
		right -30px
		top -30px
		cursor pointer
		display block
		position absolute
		z-index 4
		width 30px
		height 30px
		background-image url(/img/game/cosmomap/button_close.png)
		background-repeat no-repeat
	
		&:hover
			background-image url(/img/game/cosmomap/button_close_active.png)
	.tab
		display inline-block
		cursor pointer
		width 25%
		height 30px
		padding-top 10px
		background-color #13161b
		text-align center
		font-weight bold
		font-size 14px
		color #e8e8e8
		margin 0px
		text-decoration none
		
		&.active
			background-color #292f3b
			color #56baf2
		
		&:hover
			-webkit-filter brightness(1.4)
			filter brightness(1.4)
	.page
		height 400px
		overflow-y auto
		padding 10px
		font-weight bold
		font-size 14px
		color #888888
		background-color #030303
		display block

	th, h1, h2, h3, h4, h5, h6
		margin 5px 0 5px 0
		color #56baf2
		font-weight bold
		text-align left

	table
		width 100%
		display block
		color #ffffff

		&:after
			display block
			content ""
			margin-top 10px
			width 100%
			height 10px
			background-color #13161b

		tr
			width 100%

			td
				width 25%