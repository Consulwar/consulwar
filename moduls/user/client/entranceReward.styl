.entranceReward
	position relative
	display flex
	flex-direction column
	width 1200px
	height 600px
	background-color $color-black
	font-size 14px

	.textInfo
		padding 10px
		color $color-white
		
		.count
			color $color-metal
			font-size 16px
			vertical-align middle

	.yourReward
		display flex
		align-items center
		justify-content space-around
		flex-direction column
		background-image url(/img/game/bg/entrancereward.jpg)
		width 100%
		height 371px

		> .text
			font-size 30px
			color $color-white
			
		.rewards
			display flex
			flex-direction row
			align-items center
			justify-content center
			height 234px
			width 100%
			margin 0 10px
			
			.reward
				width 131px
				height 161px
				margin auto 10px
				transition width 0.5s, height 0.5s
				
				&.winner
					width 191px
					height 234px
					
					&:after
						opacity 0
			

		.reward
			position relative
			width 191px
			height 234px
			background-repeat no-repeat
			background-size 100%
			background-position center center
			margin 0 10px
			
			&[data-count]:before
				content attr(data-count)
				position absolute
				bottom 0
				left 0
				display block
				width 100%
				padding 8px 0
				background-color rgba(0, 0, 0, 0.5)
				text-align center
				color $color-white
			
			&[data-chance]:after
				content attr(data-chance)
				position absolute
				bottom -30px
				left 0
				display block
				width 100%
				padding 5px 0
				background linear-gradient(to right, rgba(0,0,0,0.0) 0%, rgba(0,0,0,0.8) 50%, rgba(0,0,0,0) 100%)
				text-align center
				color $color-metal
				transition opacity 0.5s
				opacity 1
			
			&.rank,
			&.containers
				background-size auto

			&.resource
				background-size auto
				
			&.units,
			&.cards,
			&.houseItems
				background-size 100%
				
		.take,
		.roll
			display block
			cursor pointer
			width 181px
			height 40px
			padding-top 10px
			color $color-white
			font-size 24px
			font-weight bold
			text-align center
			background-image url(/img/game/quests/btn_take.png)

			&:hover
				-webkit-filter brightness(1.4)
				filter brightness(1.4)

	.paymentItems
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content center
		align-items center
		margin auto

		.rewardItem
			position relative
			display block
			width 53px
			height 53px
			background-repeat no-repeat
			background-size 100%
			margin 3px
			cursor pointer

			&.state-taken
				-webkit-filter grayscale(0) brightness(0.7)
				filter grayscale(0) brightness(0.7)

			&.state-current
				-webkit-filter grayscale(0) brightness(1)
				filter grayscale(0) brightness(1)
				box-shadow 0 0 0 2px $color-human
				border-radius 2px

			&.state-possible
				-webkit-filter grayscale(0.5) brightness(0.5)
				filter grayscale(0.5) brightness(0.5)

			&.selected:not(.state-current)
				box-shadow 0 0 0 2px $color-metal
				-webkit-filter grayscale(0) brightness(0.8)
				filter grayscale(0) brightness(0.8)